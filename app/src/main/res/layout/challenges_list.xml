<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_xlight"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:padding="10dp">

                <TextView
                    android:id="@+id/txt_player_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="30dp"
                    android:maxLength="10" />

                <TextView
                    android:id="@+id/txt_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/txt_player_name"
                    android:layout_toRightOf="@+id/txt_player_name"
                    android:layout_toEndOf="@+id/txt_player_name"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" />

                <TextView
                    android:id="@+id/txt_video_game"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:layout_below="@+id/txt_player_name"
                    android:layout_marginTop="11dp"/>

                <TextView
                    android:id="@+id/txt_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/txt_video_game"
                    android:layout_alignRight="@+id/txt_coins"
                    android:layout_alignEnd="@+id/txt_coins"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>